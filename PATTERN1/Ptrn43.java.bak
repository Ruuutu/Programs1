class Ptrn43
{
	public static void main(String[] args) 
	{
		int n=7;
		int star=7;
		int space=3;
		for (int i=0;i<n ;i++ )
		{
			

			for (int j=0;j<star ;j++ )
			{  
				if (j<n/2 || j>n/2)
				{
				
				System.out.print("*"+" ");
				}
				else
				{
					System.ot.print(" "+" ");
				}
			}

			System.out.println();
			
			if(j<n/2)
			{
			space++;
				star-=2;
              			
			}
			else
			{
				space--;
				star+=2;
			}
		}

	}
}

